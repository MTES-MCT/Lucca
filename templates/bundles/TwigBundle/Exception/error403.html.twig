{% trans_default_domain 'ThemeDocsUiKitBundle' %}
<!DOCTYPE html>
<html lang="{{ app.request.locale }}">
<head>
    {#-- Title --#}
    {% block lucca_title %}
        <title> {{ 'setting.general.app.name'| setting }} | {{ 'meta.website'|trans }}</title>
    {% endblock lucca_title %}

    {#-- Meta --#}
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    {#-- Favicon --#}
    {% block lucca_favicon %}
        <link rel="icon" type="image/png" href="{{ asset('favicon.ico') }}"/>
    {% endblock lucca_favicon %}

    <!--  Meta tags -->
    {% block lucca_meta %}
        <meta name="description" content="{{ 'meta.description'|trans }}">
        <meta name="author" content="{{ 'meta.author'|trans }}">
    {% endblock lucca_meta %}

    {#-- Web Fonts --#}
    {% block lucca_fonts %}
    {% endblock lucca_fonts %}


    {#-- CSS Global Compulsory --#}
    {% block lucca_css_global %}
        <!-- CSS Template -->
        <link rel="stylesheet" href="{{ asset('bundles/luccathemedocsuikit/css/theme.css') }}">
        <link rel="stylesheet" href="{{ asset('bundles/luccathemedocsuikit/css/app.css') }}">

    {% endblock lucca_css_global %}



    {#-- CSS Header and Footer --#}
    {% block lucca_css_head_foot %}
        <!-- CSS Implementing Plugins -->
        <link href="{{ asset('bundles/luccathemedocsuikit/vendor/font-awesome/css/fontawesome-all.min.css') }}" rel="stylesheet">
        <link rel="stylesheet" href="{{ asset('bundles/luccathemedocsuikit/vendor/malihu-custom-scrollbar-plugin/jquery.mCustomScrollbar.css') }}">
    {% endblock lucca_css_head_foot %}

    {#-- JS Customization --#}
    <script src="{{ asset('assets/js/custom.js') }}"></script>
    <script src="{{ asset('assets/js/app.js') }}"></script>

    {#-- Tracking scripts --#}
    {% include "@LuccaThemeStreamDashboardUiKit/Tracking/google_analytics.js.html.twig" %}

    {#-- CSS Implementing Plugins --#}
    {% block lucca_css_plugins %}

    {% endblock lucca_css_plugins %}

    {#-- CSS Theme --#}
    {% block lucca_css_theme %}

    {% endblock lucca_css_theme %}

    {#-- CSS Customization --#}
    <link rel="stylesheet" href="{{ asset('assets/css/lucca-ui-kit.css') }}">
</head>

<body>
<!-- Header -->
<header>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark position-absolute left-0 right-0 flex-nowrap z-index-3">
        <div class="container">
            <div class="collapse navbar-collapse">
                <ul class="navbar-nav ml-auto mt-2 mt-lg-0">
                    <li class="nav-item ml-lg-6 mb-2 mb-lg-0">
                        {% if true or app.user and is_granted('IS_AUTHENTICATED_FULLY') %}
                            <a href="{{ path('lucca_core_dashboard') }}" class="btn btn-lucca mb-2 mr-2">
                                <i class="fa fa-user"></i> {{ 'header.mySpace'|trans }}
                            </a>
                        {% else %}
                            <a href="{{ path('lucca_user_security_login') }}" class="btn btn-lucca mb-2 mr-2" >
                                <i class="fa fa-user"></i>{{ 'header.login'|trans }}
                            </a>
                        {% endif %}
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container">
        <div class="row justify-content-center position-relative mh-20rem py-11">
            <div class="col-lg-3 col-xs-4 col-12">
                <div class="animated fadeInLeft">
                    <a href={{ 'setting.general.urlGouv.name'|setting }}>
                        <img src="{{ asset('assets/' ~ 'setting.general.departement.name'|setting ~ '/prefecture.jpg') }}"
                             class="img-responsive logo-header" alt="{{ 'header.prefecture'|trans }}">
                    </a>
                </div>
            </div>

            <div class="col-lg-6 col-12">
                <div class="text-center animated fadeInLeft">
                    <h1 class="main-title my-3">
                        {{ 'setting.general.app.name'| setting }}<br>
                        <span>{{ 'setting.general.catchphrase1.name'|setting }}</span><br>
                        <span>{{ 'setting.general.catchphrase2.name'|setting }}</span>
                    </h1>
                </div>
            </div>

            <div class="col-lg-3 col-xs-4 col-12">
                <div class="animated fadeInRight">
                    {% if 'setting.general.app.name'| setting != '-' %}
                        <a href="{{ path('lucca_content_dashboard') }}">
                            <img src="{{ asset('setting.general.logo.name'|setting) }}"
                                 class="img-responsive logo-header" alt="{{ 'setting.general.app.name'| setting }}">
                        </a>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>

    <div class="position-absolute" style="background: rgba(255, 255, 255, .5)">

    </div>

    <!-- End Navbar -->
</header>

<main>

    <!-- Section -->
    <section class="py-11">
        <div class="container">
            {% block lucca_page %}
                <h1>{{ 'error.403.title'|trans }}</h1>

                <p>
                    {{ 'error.403.description'|trans }} - <a
                        href="{{ path('lucca_content_dashboard') }}">{{ 'error.home'|trans }}</a>.
                </p>
            {% endblock lucca_page %}
        </div>
    </section>
    <!-- End Community Help -->
</main>

<!-- Footer -->
<footer class="bg-dark font-weight-light text-white-55 py-4">
    <div id="footerLogo"></div>
    <div class="container footer-v1">
        <div class="row margin-bottom-15 footer-light">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="text-center animated fadeInLeft">
                    <h3>{{ ('footer.' ~ 'setting.general.departement.name'| setting ~ '.title')|trans }}</h3>
                </div>
            </div>
        </div>
        <div class="row justify-content-md-between mt-4">
{#            {{ render(controller("Lucca\\Bundle\\ContentBundle\\Controller\\RenderController::footerAction")) }}#}
        </div>
        <hr class="my-5 opacity-10">
        <div class="row justify-content-between">
            <div class="col-md-7">
                <p class="small font-weight-light mb-0">
                    <span>&copy; 2017 - {{ 'now'|date('Y') }} | {{ 'meta.lucca_long'|trans|raw }}</span>
                </p>
            </div>
            <ul class="list-inline mb-0">
                <li class="list-inline-item mr-1 mr-xl-2">
                    <a href="{{ path('lucca_content_privacy_policy') }}">{{ 'footer.privacyPolicy'|trans }}</a>
                </li>
                <li class="list-inline-item mx-1 mx-xl-2">
                    <a href="{{ path('lucca_content_terms_service') }}">{{ 'footer.termsService'|trans }}</a>
                </li>
            </ul>
        </div>
    </div>
</footer>
<!-- End Footer -->

<!-- Go to Top -->
<a class="js-go-to duik-go-to" href="javascript:;">
    <span class="fa fa-arrow-up duik-go-to__inner"></span>
</a>
<!-- End Go to Top -->

<!-- JS Global Compulsory -->
<script src="{{ asset('bundles/luccathemedocsuikit/vendor/jquery/dist/jquery.min.js') }}"></script>
<script src="{{ asset('bundles/luccathemedocsuikit/vendor/jquery-migrate/dist/jquery-migrate.min.js') }}"></script>
<script src="{{ asset('bundles/luccathemedocsuikit/vendor/popper.js/dist/umd/popper.min.js') }}"></script>
<script src="{{ asset('bundles/luccathemedocsuikit/vendor/bootstrap/dist/js/bootstrap.min.js') }}"></script>

<!-- JS Implementing Plugins -->
<script src="{{ asset('bundles/luccathemedocsuikit/vendor/malihu-custom-scrollbar-plugin/jquery.mCustomScrollbar.concat.min.js') }}"></script>

<!-- JS -->
{#<script src="assets/js/main.js') }}"></script>#}
</body>
</html>
