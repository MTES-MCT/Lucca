{#-- Extends view --#}
{% extends '@LuccaThemeStreamDashboardUiKit/SubLayout/edit.html.twig' %}

{#-- Translation domain --#}
{% trans_default_domain 'AdherentBundle' %}

{#-- Parameters --#}
{% set entity_trans='entity.adherent'|trans %}



{% block lucca_panels %}

    {{ form_start(edit_form) }}
    {{ form_errors(edit_form) }}

    <div class="row">
        {#-- Panel - main --#}
        <div class="col-lg-6 col-md-8 col-sm-12 col-xs-12">

            <div class="card card-default">
                <div class="card-header">
                    {{ 'title.edit'|trans({}, 'ThemeStreamDashboardUiKit') }} - <b>{{ adherent.officialName }}</b>
                </div>

                <div class="card-wrapper">
                    <div class="card-body">
                        <div class="col-12">

                            {{ form_row(edit_form.name) }}

                            {{ form_row(edit_form.firstname) }}
                            {{ form_row(edit_form.function) }}
                            {{ form_row(edit_form.address) }}
                            {{ form_row(edit_form.zipcode) }}
                            {{ form_row(edit_form.city) }}
                            {{ form_row(edit_form.phone) }}
                            {{ form_row(edit_form.mobile) }}
                            {{ form_row(edit_form.email) }}

                            <a href="{{ path('lucca_adherent_profile_show') }}"
                               class="btn btn-secondary btn-lg" title="{{ 'link.adherent.show'|trans }}">
                                <i class="fa fa-eye"></i></a>

                            <button type="submit" class="btn btn-warning btn-lg"
                                    title="{{ 'link.adherent.edit'|trans }}">
                                <i class="fa fa-check"></i></button>
                        </div>
                    </div>
                </div>
            </div>

        </div>
        {#-- End Panel - main --#}

    </div>
    {{ form_rest(edit_form) }}
    {{ form_end(edit_form) }}

{% endblock lucca_panels %}

