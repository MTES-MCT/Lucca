{#-- Extends view --#}
{% extends '@LuccaThemeStreamDashboardUiKit/Layout/printLayout.html.twig' %}

{#-- Translation domain --#}
{% trans_default_domain 'LuccaCoreBundle' %}


{% block lucca_print %}

    {% if officialLogo.id is defined %}
        <div class="container-fluid">
            <div class="row doc-lucca-header p-2">
                <div class="col-xs-12 text-left">
                    {{ officialLogo|mediaPdf(100, "img-header mr-3 media-object")}}
                </div>
            </div>
        </div>
    {% elseif officialLogo %}
        <div class="container-fluid">
            <div class="row doc-lucca-header p-2">
                <div class="col-xs-12 text-left">
                    <img src="{{ pdf_asset }}{{ asset(officialLogo) }}" alt="Logo Officiel"
                         class="img-header mr-3 media-object">
                </div>
            </div>
        </div>
    {% endif %}

{% endblock lucca_print %}
