{#-- Extends view --#}
{% extends '@LuccaThemeStreamDashboardUiKit/SubLayout/edit.html.twig' %}

{#-- Translation domain --#}
{% trans_default_domain 'LuccaAdherentBundle' %}

{#-- Parameters --#}
{% set param_entity='entity.adherent'|transchoice(1) %}
{% set param_entities='entity.adherent'|transchoice(2) %}
{% block menuActive_adherent %}class="active"{% endblock %}


{% block lucca_panels %}

    {{ form_start(edit_form) }}
    {{ form_errors(edit_form) }}

    <div class="row">
        {#-- Panel - main --#}
        <div class="col-lg-6 col-md-8 col-sm-12 col-xs-12">

            <div class="card card-default">
                <div class="card-header">
                    {{ 'title.edit'|trans({}, 'LuccaThemeStreamDashboardUiKit') }} - <b>{{ adherent.name }}</b>
                </div>

                <div class="card-wrapper">
                    <div class="card-body">
                        <div class="col-12">

                            {{ form_row(edit_form.name) }}
                            {{ form_row(edit_form.enabled) }}

                            {% if adherent.town is not null %}
                                <div class="form-group row">
                                    <label class="col-form-label col-sm-2 control-label required"
                                           for="lucca_town">{{ 'label.town'|trans }}</label>
                                    <div class="col-sm-10">
                                        <input type="text" name="lucca_town" class="form-control"
                                               value="{{ adherent.town.formLabel }}" disabled="disabled">
                                    </div>
                                </div>
                            {% endif %}

                            {% if adherent.intercommunal is not null %}
                                <div class="form-group row">
                                    <label class="col-form-label col-sm-2 control-label required"
                                           for="lucca_intercommunal">{{ 'label.intercommunal'|trans }}</label>
                                    <div class="col-sm-10">
                                        <input type="text" name="lucca_intercommunal" class="form-control"
                                               value="{{ adherent.intercommunal.formLabel }}" disabled="disabled">
                                    </div>
                                </div>
                            {% endif %}

                            {% if adherent.service is not null %}
                                <div class="form-group row">
                                    <label class="col-form-label col-sm-2 control-label required"
                                           for="lucca_service">{{ 'label.service'|trans }}</label>
                                    <div class="col-sm-10">
                                        <input type="text" name="lucca_service" class="form-control"
                                               value="{{ adherent.service.formLabel }}" disabled="disabled">
                                    </div>
                                </div>
                            {% endif %}

                            {{ form_row(edit_form.firstname) }}
                            {{ form_row(edit_form.function) }}
                            {{ form_row(edit_form.address) }}
                            {{ form_row(edit_form.zipcode) }}
                            {{ form_row(edit_form.city) }}
                            {{ form_row(edit_form.phone) }}
                            {{ form_row(edit_form.mobile) }}
                            {{ form_row(edit_form.emailPublic) }}
                            {{ form_row(edit_form.unitAttachment) }}

                            <hr class="hr-big">

                            {{ form_row(edit_form.logo,{ 'attr': { 'class': 'labels-hidden' } }) }}

                            <a href="{{ path('lucca_adherent_show', { 'id': adherent.id }) }}"
                               class="btn btn-secondary btn-lg" title="{{ 'link.adherent.show'|trans }}">
                                <i class="fa fa-eye"></i></a>

                            <button type="submit" class="btn btn-warning btn-lg"
                                    title="{{ 'link.adherent.edit'|trans }}">
                                <i class="fa fa-check"></i></button>
                        </div>
                    </div>
                </div>
            </div>

        </div>
        {#-- End Panel - main --#}

        {#-- Panel - user --#}
        <div class="col-lg-6 col-md-8 col-sm-12 col-xs-12">
            <div class="card card-default">
                <div class="card-header">
                    {{ 'title.edit'|trans({}, 'LuccaThemeStreamDashboardUiKit') }} - <b>{{ adherent.name }}</b>
                </div>

                <div class="card-wrapper">
                    <div class="card-body">
                        <div class="col-12">
                            {{ form_widget(edit_form.user) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
        {#-- End Panel - user --#}
    </div>
    {{ form_rest(edit_form) }}
    {{ form_end(edit_form) }}

{% endblock lucca_panels %}


{% block lucca_css %}
    {{ parent() }}
{% endblock lucca_css %}


{% block lucca_js %}
    {{ parent() }}
{% endblock lucca_js %}