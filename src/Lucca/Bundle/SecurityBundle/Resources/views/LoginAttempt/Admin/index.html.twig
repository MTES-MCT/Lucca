{#-- Extends view --#}
{% extends '@NwThemeColor/SubLayout/browser.html.twig' %}

{#-- Translation domain --#}
{% trans_default_domain 'SecurityBundle' %}

{#-- Parameters --#}
{% set param_entity='entity.loginAttempt'|trans %}
{% set menuActive = "ma_adm_parameter" %}


{#-- Display form filter --#}
{% block theme_browser_filters_form %}

    {% form_theme form "bootstrap_5_layout.html.twig" %}
    {{ form_start(form, {'attr': {'class': 'form-filters'}}) }}
    <div class="row">
        <div class="col-auto">
            {{ form_row(form.requestedAt) }}
        </div>
        <div class="col-auto">
            {{ form_row(form.requestIp) }}
        </div>
        <div class="col-4">
            {{ form_row(form.requestUri) }}
        </div>
        <div class="col-auto">
            {{ form_row(form.username) }}
        </div>
        <div class="col-auto">
            {{ form_row(form.address) }}
        </div>
        <div class="col-auto">
            {{ form_row(form.addressRemote) }}
        </div>
    </div>
    {{ form_end(form) }}

{% endblock theme_browser_filters_form %}

{% block theme_browser_results %}
    <div class="col-12 table-responsive">
        <table class="table table-striped table-hover table-bordered w-100 dataTables">
            <thead>
            <tr>
                <th><i class="fas fa-calendar-alt"></i> {{ 'label.requestedAt'|trans }}</th>
                <th><i class="fas fa-book-dead"></i> {{ 'label.requestIp'|trans }}</th>
                <th>{{ 'label.requestUri'|trans }}</th>
                <th>{{ 'label.username'|trans }}</th>
                <th>{{ 'label.address'|trans }}</th>
                <th>{{ 'label.addressRemote'|trans }}</th>
                <th>{{ 'label.isCleared'|trans }}</th>
                <th><i class="fas fa-cogs"></i> {{ 'label.actions'|trans }}</th>
            </tr>
            </thead>
        </table>
    </div>
{% endblock theme_browser_results %}

{% block theme_js %}
    {{ parent() }}

    {#-- Datatable script --#}
    {% include '@LuccaSecurity/LoginAttempt/Js/login_attempt_browser.html.twig' %}
{% endblock theme_js %}

