{#-- Extends view --#}
{% extends '@LuccaThemeStreamDashboardUiKit/SubLayout/show.html.twig' %}

{#-- Translation domain --#}
{% trans_default_domain 'ParameterBundle' %}

{#-- Parameters --#}
{% set entity_trans='entity.service'|trans %}
{% block menuActive_parameter %}active{% endblock menuActive_parameter %}


{% block lucca_panels %}
    {#-- Panel - main --#}
    <div class="col-lg-6 col-md-8 col-sm-12 col-xs-12">

        <div class="card card-default">
            <div class="card-header">
                {{ 'title.show'|trans({}, 'ThemeStreamDashboardUiKit') }} - <b>{{ service.name }}</b>
            </div>

            <div class="card-wrapper">
                <div class="card-body">

                    <div class="col-12">
                        <table class="table table-striped table-hover">
                            <tbody>
                            <tr>
                                <th><i class="fa fa-map"></i> {{ 'label.code'|trans }}</th>
                                <td>{{ service.code }}</td>
                            </tr>
                            <tr>
                                <th>{{ 'label.name'|trans }}</th>
                                <td>{{ service.name }}</td>
                            </tr>
                            <tr>
                                <th>{{ 'label.enabled'|trans }}</th>
                                <td>{{ service.enabled|boolean }}</td>
                            </tr>
                            <tr>
                                <th>{{ 'label.office'|trans }}</th>
                                <td>{% if service.office %}{{ service.office.name }}{% endif %}</td>
                            </tr>
                            </tbody>
                        </table>
                    </div>

                    <div class="col-12 mt-4">
                        <a class="btn btn-secondary btn-lg" href="{{ path('lucca_service_index') }}"
                           title="{{ 'link.service.backList'|trans }}"><i class="fa fa-reply"></i></a>

                        <a class="btn btn-warning btn-lg"
                           href="{{ path('lucca_service_edit', { 'id': service.id }) }}"
                           title="{{ 'link.service.edit'|trans }}"><i class="fas fa-pencil-alt"></i></a>

                        <a class="btn btn-danger btn-lg pull-right" data-toggle="modal"
                           data-target=".delWin" title="{{ 'link.service.delete'|trans }}">
                            <i class="fas fa-times"></i>
                        </a>
                    </div>

                </div>
            </div>
        </div>
    </div>
    {#-- End Panel - main --#}
{% endblock lucca_panels %}


{% block lucca_css %}
    {{ parent() }}
{% endblock lucca_css %}


{% block lucca_js %}
    {% include '@LuccaThemeStreamDashboardUiKit/Modal/delete.html.twig' with {'id': service.name, 'name': service.name, 'delForm': delete_form} %}
    {{ parent() }}
{% endblock lucca_js %}
