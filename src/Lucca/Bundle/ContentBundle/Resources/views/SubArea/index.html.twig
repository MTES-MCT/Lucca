{% extends '@LuccaThemeStreamDashboardUiKit/SubLayout/index.html.twig' %}
{% trans_default_domain 'ContentBundle' %}

{% set entity_trans='entity.subarea'|trans %}


{% block menuActive_subarea %}active{% endblock menuActive_subarea %}


{% block lucca_list %}

    <table class="table table-hover w-100 responsive dataTables">
        <thead>
        <tr>
            <th><i class="fa fa-cube"></i> {{ 'label.area'|trans }}</th>
            <th><i class="fa fa-cubes"></i> {{ 'label.name'|trans }}</th>
            <th>{{ 'label.position'|trans }}</th>
            <th>{{ 'label.title'|trans }}</th>
            <th>{{ 'label.width'|trans }}</th>
            <th>{{ 'label.color'|trans }}</th>
            <th>{{ 'label.enabled'|trans }}</th>
            <th><i class="fa fa-cogs"></i> {{ 'label.actions'|trans }}</th>
        </tr>
        </thead>

        <tbody>
        {% for subArea in subAreas %}
            <tr>
                <td>{% if subArea.area %}{{ subArea.area.name }}{% endif %}</td>
                <td>{{ subArea.name }}</td>
                <td>{{ subArea.position }}</td>
                <td>{{ subArea.title }}</td>
                <td>{{ subArea.width }}</td>
                <td  style="border-left: 15px solid {{ subArea.color }}">{{ subArea.color }}</td>
                <td>{% if subArea.enabled %} <i class="fa fa-check"></i> {% else %}
                        <i class="fas fa-times"></i> {% endif %}</td>
                <td>
                    {% if subArea.enabled %}
                        <a href="{{ path('lucca_subarea_enable', { 'id': subArea.id }) }}"
                           class="btn btn-info btn-sm" title="{{ 'link.enable'|trans }}">
                            <i class="fa fa-toggle-on" aria-hidden="true"></i>
                        </a>
                    {% else %}
                        <a href="{{ path('lucca_subarea_enable', { 'id': subArea.id }) }}"
                           class="btn btn-info btn-sm" title="{{ 'link.disable'|trans }}">
                            <i class="fa fa-toggle-off" aria-hidden="true"></i>
                        </a>
                    {% endif %}

                    <a href="{{ path('lucca_subarea_show', { 'id': subArea.id }) }}" class="btn btn-primary btn-sm"
                       title="{{ 'link.show'|trans }}"> <i class="fa fa-eye"></i> </a>
                    <a href="{{ path('lucca_subarea_edit', { 'id': subArea.id }) }}" class="btn btn-warning btn-sm"
                       title="{{ 'link.edit'|trans }}"> <i class="fas fa-pencil-alt"></i> </a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-primary btn-lg" href="{{ path('lucca_subarea_new') }}"
       title="{{ 'link.new'|trans }}"><i class="fa fa-plus"></i></a>
{% endblock lucca_list %}

