{% extends '@LuccaThemeStreamDashboardUiKit/SubLayout/edit.html.twig' %}
{% trans_default_domain 'LuccaContentBundle' %}

{% set entity_trans='entity.subarea'|trans %}


{% block menuActive_subarea %}active{% endblock menuActive_subarea %}


{% block lucca_panels %}

    {{ form_start(edit_form) }}
    {{ form_errors(edit_form) }}

    {#-- Panel - main --#}
    <div class="col-lg-6 col-md-8 col-sm-12 col-xs-12">

        <div class="card card-default">
            <div class="card-header">
                {{ 'title.edit'|trans({}, 'LuccaThemeStreamDashboardUiKit') }} - <b>{{ subArea.name }}</b>
            </div>

            <div class="card-wrapper">
                <div class="card-body">
                    <div class="col-12">
                        {{ form_row(edit_form.name) }}
                        {{ form_row(edit_form.enabled) }}
                        {{ form_row(edit_form.position) }}
                        {{ form_row(edit_form.width) }}
                        {{ form_row(edit_form.color, { 'id': 'demo_selectors' }) }}
                        {{ form_row(edit_form.title) }}
                        {{ form_row(edit_form.area) }}

                        <a href="{{ path('lucca_subarea_show', { 'id': subArea.id }) }}"
                           class="btn btn-secondary btn-lg" title="{{ 'link.show'|trans }}">
                            <i class="fa fa-eye"></i></a>

                        <button type="submit" class="btn btn-warning btn-lg" title="{{ 'link.edit'|trans }}">
                            <i class="fa fa-check"></i></button>

                        <a class="btn btn-danger btn-lg pull-right"
                           data-toggle="modal" data-target=".delWin" title="{{ 'link.delete'|trans }}">
                            <i class="fas fa-times"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>

    </div>
    {#-- End Panel - main --#}

    {{ form_rest(edit_form) }}
    {{ form_end(edit_form) }}

{% endblock lucca_panels %}


{% block lucca_css %}
    {{ parent() }}

    <link href="{{ asset('plugins/bootstrap-colorpicker/dist/css/bootstrap-colorpicker.css') }}"
          rel="stylesheet">
{% endblock lucca_css %}


{% block lucca_js %}
    {% include '@LuccaThemeStreamDashboardUiKit/Modal/delete.html.twig' with {'id': subArea.name, 'name': subArea.name, 'delForm': delete_form} %}
    {{ parent() }}

    <script src="{{ asset('plugins/bootstrap-colorpicker/dist/js/bootstrap-colorpicker.js') }}"></script>
{% endblock lucca_js %}
