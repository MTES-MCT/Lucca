{% extends '@LuccaThemeStreamDashboardUiKit/SubLayout/index.html.twig' %}
{% trans_default_domain 'LuccaContentBundle' %}

{% set entity_trans_key='entity.page' %}


{% block menuActive_page %}class="active"{% endblock menuActive_page %}


{% block lucca_list %}

    <table class="table table-striped table-hover dataTables responsive">
        <thead>
        <tr>
            <th><i class="fa fa-cubes"></i> {{ 'label.subarea'|trans }}</th>
            <th><i class="fa fa-files-o"></i> {{ 'label.name'|trans }}</th>
            <th>{{ 'label.slug'|trans }}</th>
            <th>{{ 'label.icon'|trans }}</th>
            <th>{{ 'label.link'|trans }}</th>
            <th>{{ 'label.position'|trans }}</th>
            <th>{{ 'label.mediasLinked'|trans }}</th>
            <th><i class="fa fa-cogs"></i> {{ 'label.actions'|trans }}</th>
        </tr>
        </thead>

        <tbody>
        {% for page in pages %}
            <tr>
                <td>{{ page.subarea.name }}</td>
                <td>{{ page.name }}</td>
                <td>{{ page.slug }}</td>
                <td><i class="{{ page.icon }}"></i> {{ page.icon }}</td>
                <td>{{ page.link }}</td>
                <td>{{ page.position }}</td>
                <td><span class="badge badge-info"> {{ page.mediaslinked|length }}</span></td>
                <td>
                    {% if page.enabled %}
                        <a href="{{ path('lucca_page_enable', { 'id': page.id }) }}"
                           class="btn btn-info btn-sm" title="{{ 'link.enable'|trans }}">
                            <i class="fa fa-toggle-on" aria-hidden="true"></i>
                        </a>
                    {% else %}
                        <a href="{{ path('lucca_page_enable', { 'id': page.id }) }}"
                           class="btn btn-info btn-sm" title="{{ 'link.disable'|trans }}">
                            <i class="fa fa-toggle-off" aria-hidden="true"></i>
                        </a>
                    {% endif %}

                    <a href="{{ path('lucca_page_show', { 'id': page.id }) }}" class="btn btn-primary btn-sm"
                       title="{{ 'link.show'|trans }}"> <i class="fa fa-eye"></i> </a>
                    <a href="{{ path('lucca_page_edit', { 'id': page.id }) }}" class="btn btn-warning btn-sm"
                       title="{{ 'link.edit'|trans }}"> <i class="fas fa-pencil-alt"></i> </a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-primary btn-lg" href="{{ path('lucca_page_new') }}"
       title="{{ 'link.new'|trans }}"><i class="fa fa-plus"></i></a>
{% endblock lucca_list %}

