{#-- Extends view --#}
{% extends '@LuccaThemeStreamDashboardUiKit/SubLayout/edit.html.twig' %}

{#-- Translation domain --#}
{% trans_default_domain 'LuccaMediaBundle' %}

{#-- Parameters --#}
{% set entity_trans_key='entity.category' %}
{% block menuActive_parameter %}class="active"{% endblock %}


{% block lucca_panels %}

    {#-- Embed view - params and block --#}
    {% embed "@LuccaMedia/Category/Embed/_form-category.html.twig" with { 'form': form, 'category': category } %}
        {#-- Translation domain embed --#}
        {% trans_default_domain 'LuccaMediaBundle' %}

        {% block lucca_embed_buttons_category %}
            <a href="{{ path('lucca_media_category_index') }}" class="btn btn-secondary btn-lg"
               title="{{ 'link.category.backList'|trans }}">
                <i class="fas fa-reply"></i></a>

            <a href="{{ path('lucca_media_category_show', {'id': category.id}) }}" class="btn btn-info btn-lg"
               title="{{ 'link.category.show'|trans }}">
                <i class="fas fa-eye"></i></a>

            <button type="submit" class="btn btn-success btn-lg float-right" title="{{ 'link.category.edit'|trans }}">
                {{ 'label.validate'|trans }}&nbsp;&nbsp;<i class="fas fa-check"></i>
            </button>
        {% endblock %}

    {% endembed %} {#-- End Embed --#}

{% endblock lucca_panels %}


{% block lucca_js %}
    {{ parent() }}

    <script>
        {#-- Collection form - Extension --#}
        {% include "@LuccaMedia/Extension/Js/collection-extension.js.twig" with { 'params' :
            {'position_field_selector': '.position'}
        } %}

        {#-- Collection form - MetaDataModel --#}
        {% include "@LuccaMedia/MetaDataModel/Js/collection-metaDataModel.js.twig" with { 'params' :
            {'position_field_selector': '.position'}
        } %}
    </script>

{% endblock lucca_js %}
