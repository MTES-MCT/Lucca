{#-- Translation domain --#}
{% trans_default_domain 'MediaBundle' %}


{#-- Panel - Embed --#}

{#-- Panel - main --#}
<div class="show-category-left">
    <div class="card card-default">
        <div class="card-header">
            <a class="collapse-link" title="{{ 'link.reducePanel'|trans }}">
                <h5><i class="fas fa-bookmark"></i> {{ 'entity.category'|trans }} </h5>
            </a>
        </div>


        <div class="card-wrapper">
            <div class="card-body">
                <table class="table table-striped table-hover">
                    <tbody>
                    <tr>
                        <th><i class="fas fa-bookmark"></i> {{ 'label.name'|trans }}</th>
                        <td>{{ category.name }}</td>
                    </tr>
                    <tr>
                        <th>{{ 'label.description'|trans }}</th>
                        <td>{{ category.description }}</td>
                    </tr>
                    <tr>
                        <th>{{ 'label.icon'|trans }}</th>
                        <td>{{ category.icon }}</td>
                    </tr>
                    <tr>
                        <th>{{ 'label.storager'|trans }}</th>
                        <td>
                            <a href="{{ path('lucca_media_storager_show', {'id': category.storager.id}) }}"
                               class="btn btn-secondary btn-xs">
                                <i class="fas fa-sd-card"></i> {{ category.storager.name }}
                            </a>
                        </td>
                    </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div> {#-- End Panel - main --#}

<div class="show-category-right">

    {#-- Panel - meta --#}
    <div class="card card-default">
        <div class="card-header">
            <a class="collapse-link" title="{{ 'link.reducePanel'|trans }}">
                <h5><i class="far fa-meteor"></i> {{ 'entity.metaDataModel'|trans }} </h5>
            </a>
        </div>

        <div class="card-wrapper">
            <div class="card-body">
                <div class="scrollbar-default scroll-x-responsive">
                    <table class="table table-striped table-hover">
                        <thead>
                        <tr>
                            <th> {{ 'label.name'|trans }}</th>
                            <th>{{ 'label.keyword'|trans }}</th>
                            <th>{{ 'label.description'|trans }}</th>
                        </tr>
                        </thead>

                        <tbody>
                        {% for metaData in category.metasDatasModels %}
                            <tr>
                                <td>{{ metaData.name }}</td>
                                <td>{{ metaData.keyword }}</td>
                                <td>{{ metaData.description }}</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div> {#-- End Panel - meta --#}

    {#-- Panel - extension --#}
    <div class="card card-default">
        <div class="card-header">
            <a class="collapse-link" title="{{ 'link.reducePanel'|trans }}">
                <h5><i class="far fa-file-chart-pie"></i> {{ 'entity.extension'|trans }} </h5>
            </a>
        </div>

        <div class="card-wrapper">
            <div class="card-body">
                <div class="scrollbar-default scroll-x-responsive">
                    <table class="table table-striped table-hover">
                        <thead>
                        <tr>
                            <th> {{ 'label.name'|trans }}</th>
                            <th>{{ 'label.value'|trans }}</th>
                            <th>{{ 'label.description'|trans }}</th>
                        </tr>
                        </thead>

                        <tbody>
                        {% for extension in category.extensions %}
                            <tr>
                                <td>{{ extension.name }}</td>
                                <td>{{ extension.value }}</td>
                                <td>{{ extension.description }}</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div> {#-- Panel - extension --#}

</div>

<div class="col-12 pb-3">
    {#-- Block embed --#}
    {% block lucca_embed_buttons_category %}

    {% endblock %}
    {#-- End Block embed --#}
</div>

{#-- End Panel - Embed --#}
