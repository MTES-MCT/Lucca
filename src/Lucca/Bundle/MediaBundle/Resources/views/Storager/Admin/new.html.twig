{#-- Extends view --#}
{% extends "@LuccaThemeStreamDashboardUiKit/SubLayout/new.html.twig" %}

{#-- Translation domain --#}
{% trans_default_domain 'LuccaMediaBundle' %}

{#-- Parameters --#}
{% set entity_trans='entity.storager'|trans %}
{% block menuActive_parameter %}active{% endblock %}


{% block lucca_panels %}

    {#-- Embed view - params and block --#}
    {% embed "@LuccaMedia/Storager/Embed/_form-storager.html.twig" with { 'form': form } %}
        {#-- Translation domain embed --#}
        {% trans_default_domain 'LuccaMediaBundle' %}

        {% block lucca_embed_buttons_storager %}
            <a class="btn btn-secondary btn-lg" href="{{ path('lucca_media_storager_index') }}"
               title="{{ 'link.storager.backList'|trans }}"><i class="fas fa-reply"></i></a>

            <button type="submit" class="btn btn-primary btn-lg" title="{{ 'link.storager.new'|trans }}">
                <i class="fas fa-check"></i>
            </button>
        {% endblock %}

    {% endembed %} {#-- End Embed --#}

{% endblock lucca_panels %}


{% block lucca_css %}
    {{ parent() }}

    {#-- Plugin - Summernote --#}
    {% include "@LuccaThemeStreamDashboardUiKit/Plugins/summernote.css.html.twig" %}

{% endblock lucca_css %}


{% block lucca_js %}
    {{ parent() }}

    {#-- Plugin - Summernote --#}
    {% include "@LuccaThemeStreamDashboardUiKit/Plugins/summernote.js.html.twig" %}

{% endblock lucca_js %}
