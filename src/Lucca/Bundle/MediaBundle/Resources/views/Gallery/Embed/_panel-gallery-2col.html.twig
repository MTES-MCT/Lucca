{#-- Translation domain --#}
{% trans_default_domain 'MediaBundle' %}


{#-- View embed --#}
<div class="card card-default">
    <div class="card-header">
        <a class="collapse-link" title="{{ 'link.reducePanel'|trans }}">
            <h5><i class="fad fa-photo-video"></i> {{ 'entity.gallery'|trans }} </h5>
        </a>
    </div>

    <div class="card-wrapper">
        <div class="card-body">
            <div class="row">
                {% if gallery %}
                    <div class="col">
                        <table class="table table-striped table-hover">
                            <tbody>
                            <tr>
                                <th><i class="fad fa-photo-video"></i> {{ 'label.name'|trans }}</th>
                                <td>{{ gallery.name }}</td>
                            </tr>
                            <tr>
                                <th>{{ 'label.enabled'|trans }}</th>
                                <td>{{ gallery.enabled|boolean }}</td>
                            </tr>
                            <tr>
                                <th><i class="far fa-image"></i> {{ 'label.defaultMedia'|trans }}</th>
                                <td>{{ gallery.defaultMedia|mediaTag }}</td>
                            </tr>
                            <tr>
                                <th>{{ 'label.description'|trans }}</th>
                                <td>{{ gallery.description }}</td>
                            </tr>
                            </tbody>
                        </table>
                    </div>

                    <div class="col">
                        <div class="row">
                            {% for media in gallery.medias %}
                                {% include '@LuccaMedia/Media/Embed/_element-media.html.twig' with {'media': media, 'colSize': 4 } %}
                            {% endfor %}
                        </div>
                    </div>
                {% endif %}

                {#-- Buttons --#}
                <div class="col-12">
                    {% block lucca_embed_buttons_gallery %}

                    {% endblock %}
                </div> {#-- End - Buttons --#}
            </div>
        </div>
    </div>
</div>
{#-- End - View embed --#}
