{#-- Extends view --#}
{% extends "@LuccaThemeStreamDashboardUiKit/SubLayout/edit.html.twig" %}

{#-- Translation domain --#}
{% trans_default_domain 'LuccaFolderBundle' %}

{#-- Parameters --#}
{% set entity_trans='entity.folder'|trans %}
{% block menuActive_minute %}active{% endblock %}


{% block lucca_panels %}

    <div class="row">
        {#-- Panel - main --#}

        {% embed "@LuccaMinute/FolderSigned/Embed/_form-folderSigned.html.twig" with {
            'form': edit_form
        } %}
            {% trans_default_domain 'LuccaFolderBundle' %}
            {% block lucca_embed_buttons_folderSigned %}
                <a class="btn btn-secondary btn-lg"
                   href="{{ path('lucca_minute_show', { 'id': minute.id }) }}"
                   title="{{ 'link.minute.show'|trans }}"><i class="fa fa-reply"></i></a>

                <button type="submit" class="btn btn-success btn-lg"
                        title="{{ 'link.folderSigned.edit'|trans }}">
                    <i class="fa fa-check"></i></button>
            {% endblock %}
        {% endembed %}
        {#-- End Panel - main --#}

    </div>

{% endblock lucca_panels %}


{% block lucca_css %}
    {{ parent() }}

{% endblock lucca_css %}

{% block lucca_js %}
    {{ parent() }}
{% endblock lucca_js %}
