{#-- Extends view --#}
{% extends "@LuccaThemeStreamDashboardUiKit/SubLayout/new.html.twig" %}

{#-- Translation domain --#}
{% trans_default_domain 'LuccaFolderBundle' %}

{#-- Parameters --#}
{% set param_entity='entity.tag'|transchoice(1) %}
{% set param_entities='entity.tag'|transchoice(2) %}
{% block menuActive_parameter %}class="active"{% endblock menuActive_parameter %}


{% block lucca_panels %}

    {{ form_start(form) }}

    {% form_theme form
        '@LuccaThemeStreamDashboardUiKit/Form/jquery.collection.html.twig'
        '@LuccaFolder/Proposal:proposalTheme.html.twig' %}

    {{ form_errors(form) }}

    <div class="row">
        {#-- Panel - main --#}
        <div class="col-6">
            <div class="card card-default">
                <div class="card-header">
                    {{ 'title.new'|trans({}, 'LuccaThemeAngleBundle') }} - <b>{{ param_entity }}</b>
                </div>

                <div class="card-wrapper">
                    <div class="card-body">
                        <div class="col-12">
                            {{ form_row(form.num) }}
                            {{ form_row(form.name) }}
                            {{ form_row(form.enabled) }}
                            {{ form_row(form.category) }}
                            {{ form_row(form.description) }}

                            <a class="btn btn-secondary btn-lg" href="{{ path('lucca_tag_index') }}"
                               title="{{ 'link.tag.backList'|trans }}"><i class="fa fa-reply"></i></a>

                            <button type="submit" class="btn btn-success btn-lg"
                                    title="{{ 'link.tag.new'|trans }}"><i class="fa fa-check"></i></button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        {#-- End Panel - main --#}

        {#-- Panel - proposals --#}
        <div class="col-6">

            <div class="card card-default">
                <div class="card-header">
                    {{ 'title.manage'|trans({}, 'LuccaThemeAngleBundle') }} - <b>{{ 'label.proposals'|trans }}</b>
                </div>

                <div class="card-wrapper">
                    <div class="card-body">
                        <div class="col-12">
                            {{ form_widget(form.proposals) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
        {#-- End Panel - proposals --#}
    </div>

    {{ form_rest(form) }}
    {{ form_end(form) }}
{% endblock lucca_panels %}


{% block lucca_css %}
    {{ parent() }}

    <link href="{{ asset('plugins/summernote/summernote-bs4.css') }}" rel="stylesheet">

{% endblock lucca_css %}


{% block lucca_js %}
    {{ parent() }}

    <script src="{{ asset('plugins/summernote/summernote-bs4.js') }}"></script>
    <script src="{{ asset('plugins/summernote/lang/summernote-fr-FR.min.js') }}"></script>
    <script src="{{ asset('plugins/symfony-collection/jquery.collection.js') }}"></script>

    <script>
        {# Summernote #}
        $('.summernote').summernote({
            height: 250,
            lang: 'fr-FR',
            tabsize: 2,
            disableDragAndDrop: true,
            toolbar: [
                ['style', ['style']],
                ['font', ['bold', 'underline', 'clear']],
                ['color', ['color']],
                ['para', ['ul', 'ol', 'paragraph']],
                ['table', ['table']],
                ['insert', ['link']],
                ['view', ['fullscreen', 'codeview', 'help']],
            ],
        });

        {# Collection form #}
        $('.proposals-collection').collection({
            allow_duplicate: true, allow_up: false, allow_down: false,
            add_at_the_end: true,
            add: '<a href="#" class="btn btn-primary" title="{{ "link.proposal.new"|trans }}"><span class="fa fa-plus"></span></a>',

            elements_selector: 'tr.element',
            elements_parent_selector: '%id% tbody',
            after_add: function (collection, element) {
                $('.summernote-light').summernote('destroy');
                $('.summernote-light').summernote({
                    height: 100
                });
            }
        });
    </script>
{% endblock lucca_js %}