{#-- Extends view --#}
{% extends '@LuccaThemeStreamDashboardUiKit/SubLayout/edit.html.twig' %}

{#-- Translation domain --#}
{% trans_default_domain 'LuccaFolderBundle' %}

{#-- Parameters --#}
{% set entity_trans_key='entity.natinf' %}
{% block menuActive_parameter %}class="active"{% endblock menuActive_parameter %}


{% block lucca_panels %}

    {{ form_start(edit_form) }}
    {{ form_errors(edit_form) }}

    {#-- Panel - main --#}
    <div class="col-lg-6 col-md-8 col-sm-12 col-xs-12">

        <div class="card card-default">
            <div class="card-header">
                {{ 'title.edit'|trans({}, 'LuccaThemeAngleBundle') }} - <b>{{ natinf.num }}</b>
            </div>

            <div class="card-wrapper">
                <div class="card-body">
                    <div class="col-12">
                        {{ form_row(edit_form.num) }}
                        {{ form_row(edit_form.enabled) }}
                        {{ form_row(edit_form.qualification) }}
                        {{ form_row(edit_form.definedBy) }}
                        {{ form_row(edit_form.repressedBy) }}
                        {{ form_row(edit_form.tags) }}
                        {{ form_row(edit_form.parent) }}

                        <a href="{{ path('lucca_natinf_show', { 'id': natinf.id }) }}"
                           class="btn btn-secondary btn-lg" title="{{ 'link.natinf.show'|trans }}">
                            <i class="fa fa-eye"></i></a>

                        <button type="submit" class="btn btn-warning btn-lg" title="{{ 'link.natinf.edit'|trans }}">
                            <i class="fa fa-check"></i></button>

                        <a class="btn btn-danger btn-lg pull-right"
                           data-toggle="modal" data-target=".delWin" title="{{ 'link.natinf.delete'|trans }}">
                            <i class="fas fa-times"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>

    </div>
    {#-- End Panel - main --#}

    {{ form_rest(edit_form) }}
    {{ form_end(edit_form) }}

{% endblock lucca_panels %}


{% block lucca_css %}
    {{ parent() }}

{% endblock lucca_css %}


{% block lucca_js %}
    {% include 'LuccaThemeAngleBundle:Modal:delete.html.twig' with {'id': natinf.num, 'name': natinf.num, 'delForm': delete_form} %}

    {{ parent() }}
{% endblock lucca_js %}
