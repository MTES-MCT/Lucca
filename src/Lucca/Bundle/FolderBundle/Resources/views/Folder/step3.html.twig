{% extends '@LuccaThemeStreamDashboardUiKit/SubLayout/edit.html.twig' %}
{% trans_default_domain 'LuccaFolderBundle' %}

{% set entity_trans_key='entity.folder' %}


{% block menuActive_minute %}class="active"{% endblock menuActive_minute %}


{% block lucca_panels %}

    <div class="row">
        <div class="col-lg-9 col-md-9 col-sm-12 col-xs-12">
            <p class="text-danger">
                <em>
                    Les natinfs proposés correspondent aux mots clés sélectionnés dans les précédents cadres.<br>
                    Sélectionnez ceux correspondants à l'infraction.<br>
                </em>
            </p>
        </div>
    </div>

    {{ form_start(form) }}
    {{ form_errors(form) }}

    {#-- Panel - natinf --#}
    <div class="row">

        <div class="col-lg-9 col-md-9 col-sm-9 col-xs-9">

            <div class="card card-default">
                <div class="card-header"><strong>{{ 'title.natinfs'|trans }}</strong></div>

                <div class="card-wrapper">
                    <div class="card-body">

                        <table class="table table-striped table-hover">
                            <thead>
                            <tr>
                                <th><i class="fa fa-puzzle-piece"></i> {{ 'label.num'|trans }}</th>
                                <th>{{ 'label.qualification'|trans }}</th>
                                <th>{{ 'label.tags'|trans }}</th>
                            </tr>
                            </thead>

                            <tbody>
                            {% for natinf in natinfsFiltered %}
                                <tr class="natinfs natinf-{{ natinf.id }} {% for tag in natinf.tags %}tag-{{ tag.id }} {% endfor %}">
                                    <td>
                                        {{ form_row(form.natinfs[natinf.id]) }}
                                        {#{{ natinf.num }}#}
                                    </td>
                                    <td>{{ natinf.qualification }}</td>
                                    <td>
                                        <span class="badge badge-info">{{ natinf.tags|length }}</span>
                                        {% for tag in natinf.tags %}{{ tag.name }}{% if not loop.last %},{% endif %}{% endfor %}
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>

                        <div class="col-12 mt-3">
                            <a class="btn btn-secondary btn-lg"
                               href="{{ path('lucca_minute_show', { 'id': minute.id }) }}"
                               title="{{ 'link.backMinute'|trans }}"><i class="fa fa-reply"></i></a>

                            <button type="submit" class="btn btn-success btn-lg"
                                    title="{{ 'link.folder.step3'|trans }}">
                                <i class="fa fa-check"></i></button>
                        </div>

                    </div>
                </div>
            </div>

        </div>
        {#-- End Panel - natinf --#}

        {#-- Panel - tags --#}
        <div class="col-lg-3 col-md-3 col-sm-3 col-xs3">

            <div class="card card-default">
                <div class="card-header"><strong>{{ 'title.tags'|trans }}</strong></div>

                <div class="card-wrapper">
                    <div class="card-body">
                        {% for tag in folder.tagsNature %}
                            <a class="mb-1 btn btn-primary btn-block btn-natinf">
                                {{ tag.name }}
                            </a>
                        {% endfor %}
                        {% for tag in folder.tagsTown %}
                            <a class="mb-1 btn btn-primary btn-block btn-natinf">
                                {{ tag.name }}
                            </a>
                        {% endfor %}
                    </div>
                </div>
            </div>

        </div>
    </div>
    {#-- End Panel - tags --#}

    <div class="row mt-4">

        <div class="col-lg-9 col-md-9 col-sm-12 col-xs-12">
            <p class="text-danger">
                <em>
                    Pour ajouter un natinf à la liste proposée en ci-dessus, revenez aux les cadres précédents
                    "<a href="{{ path('lucca_folder_step1', { 'minute_id': minute.id, 'id': folder.id }) }}">nature de
                        l'infraction</a>"
                    et "<a href="{{ path('lucca_folder_step2', { 'minute_id': minute.id, 'id': folder.id }) }}">réglementation
                        applicable</a>" et sélectionnez un nouveau mot-clé.
                </em>
            </p>
        </div>


        {#-- Panel - All natinf --#}
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">

            <div class="card card-default">
                <div class="card-header"><strong>{{ 'title.all_natinf'|trans }}</strong></div>

                <div class="card-wrapper">
                    <div class="card-body">

                        <div class="col-12">
                            <table class="table table-striped table-hover dataTables responsive">
                                <thead>
                                <tr>
                                    <th><i class="fa fa-puzzle-piece"></i> {{ 'label.num'|trans }}</th>
                                    <th>{{ 'label.qualification'|trans }}</th>
                                    <th>{{ 'label.tags'|trans }}</th>
                                </tr>
                                </thead>

                                <tbody>
                                {% for natinf in natinfs %}
                                    <tr class="natinfs natinf-{{ natinf.id }}">
                                        <td>{{ natinf.num }}</td>
                                        <td>{{ natinf.qualification }}</td>
                                        <td>
                                            <span class="badge badge-info">{{ natinf.tags|length }}</span>
                                            {% for tag in natinf.tags %}{{ tag.name }}{% if not loop.last %},{% endif %}{% endfor %}
                                        </td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>

                        <div class="col-12 mt-3">
                            <a href="{{ path('lucca_folder_step1', {'minute_id': minute.id, 'id': folder.id }) }}"
                               class="btn btn-secondary btn-labeled" title="{{ 'help.folder.step1'|trans }}">
                                <span class="btn-label"><i class="fa fa-leaf"></i></span>
                                {{ 'text.folder.nature'|trans }}
                            </a>

                            <a href="{{ path('lucca_folder_step2', {'minute_id': minute.id, 'id': folder.id }) }}"
                               class="btn btn-secondary btn-labeled" title="{{ 'help.folder.step2'|trans }}">
                                <span class="btn-label"><i class="fas fa-building"></i></span>
                                {{ 'text.folder.rule'|trans }}
                            </a>
                        </div>

                    </div>
                </div>
            </div>

        </div>
    </div>
    {#-- End Panel - All natinf --#}

    <div style="display: none;">
        {{ form_rest(form) }}
    </div>
    {{ form_end(form) }}

{% endblock lucca_panels %}


{% block lucca_css %}
    {{ parent() }}

    {#-- Data Tables --#}
    <link href="{{ asset('bundles/luccathemeangle/plugins/datatables.net-bs4/css/dataTables.bootstrap4.css') }}"
          rel="stylesheet">
    <link href="{{ asset('bundles/luccathemeangle/plugins/datatables.net-keytable-bs/css/keyTable.bootstrap.css') }}"
          rel="stylesheet">
    <link href="{{ asset('bundles/luccathemeangle/plugins/datatables.net-responsive-bs/css/responsive.bootstrap.css') }}"
          rel="stylesheet">

{% endblock lucca_css %}


{% block lucca_js %}
    {{ parent() }}

    {#-- Data Tables --#}
    <script src="{{ asset('bundles/luccathemeangle/plugins/datatables.net/js/jquery.dataTables.js') }}"></script>

    <script src="{{ asset('bundles/luccathemeangle/plugins/datatables.net-bs4/js/dataTables.bootstrap4.js') }}"></script>
    <script src="{{ asset('bundles/luccathemeangle/plugins/datatables.net-buttons/js/dataTables.buttons.js') }}"></script>
    <script src="{{ asset('bundles/luccathemeangle/plugins/datatables.net-buttons-bs/js/buttons.bootstrap.js') }}"></script>

    <script src="{{ asset('bundles/luccathemeangle/plugins/datatables.net-keytable/js/dataTables.keyTable.js') }}"></script>
    <script src="{{ asset('bundles/luccathemeangle/plugins/datatables.net-responsive/js/dataTables.responsive.js') }}"></script>
    <script src="{{ asset('bundles/luccathemeangle/plugins/datatables.net-responsive-bs/js/responsive.bootstrap.js') }}"></script>

    <script>
        $(document).ready(function () {
            $('.dataTables').DataTable({
                pageLength: 10,
                responsive: true,
                "language": {
                    "url": "{{ asset('bundles/luccathemeangle/plugins/datatables.net/lang/dataTables.fr.json') }}"
                },
            });
        });
    </script>
{% endblock lucca_js %}
