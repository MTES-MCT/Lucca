{% extends "@LuccaThemeStreamDashboardUiKit/Layout/layout.html.twig" %}
{% trans_default_domain 'ThemeStreamDashboardUiKit' %}

{% set param_topbar='gray-bg' %}

{% block lucca_title %}
    <title>{{ 'setting.general.app.name'| setting }} | {{ entity_trans }} - {{ 'title.edit'|trans }}</title>
{% endblock lucca_title %}

{% block lucca_header %}
    {{ entity_trans }}
{% endblock lucca_header %}


{% block lucca_page %}

    {% include '@LuccaThemeStreamDashboardUiKit/Flash/flashes.html.twig' %}

    {% block lucca_panels %}
    {% endblock lucca_panels %}

{% endblock lucca_page %}


{% block lucca_css %}
    {{ parent() }}

    {#-- Plugin - Summernote --#}
    {% include "@LuccaThemeStreamDashboardUiKit/Plugins/summernote.css.html.twig" %}
    
    <style>
        .custom-file-label::after {
            content: '{{ 'label.filetype' | trans({}, 'CoreBundle') }}' !important;
        }
    </style>
{% endblock lucca_css %}

{% block lucca_modal %}
    {{ parent() }}
{% endblock lucca_modal %}

{% block lucca_js %}
    {{ parent() }}

    {#-- Plugin - Summernote --#}
    {% include "@LuccaThemeStreamDashboardUiKit/Plugins/summernote.js.html.twig" %}
{% endblock lucca_js %}
