{#-- Extends view --#}
{% extends "@LuccaThemeStreamDashboardUiKit/Layout/layout.html.twig" %}

{#-- Translation domain --#}
{% trans_default_domain 'ThemeStreamDashboardUiKit' %}

{#-- Parameters --#}
{% set param_topbar='gray-bg' %}

{% block lucca_title %}
    <title>{{ 'setting.general.app.name'| setting }} | {{ entity_trans }} - {{ 'title.browser'|trans }}</title>
{% endblock lucca_title %}

{% block lucca_header %}
    {{ entity_trans }}
{% endblock lucca_header %}


{% block lucca_page %}

    {#-- Panel - Description --#}
    {% block lucca_description %}
    <div class="col-12">
        <div class="card card-default">
            <div class="card-header">
                <div class="card-title">
                    {% block lucca_description_title %}
                    {% endblock lucca_description_title %}
                </div>
            </div>
        </div>
    </div>
    {% endblock lucca_description %}
    {#-- End Panel - description --#}


    {#-- Panel - filters --#}
    <div class="col-12">
        <div class="card card-default">
            <div class="card-header">
                <div class="card-title">
                    <b>{{ 'title.filters'|trans }}</b>
                </div>
            </div>

            <div class="card-wrapper collapse show">
                <div class="card-body">
                    <div class="col-12">
                        {% block lucca_filters_form %}
                        {% endblock lucca_filters_form %}
                    </div>
                </div>
            </div>
        </div>
    </div>
    {#-- End Panel - filters --#}


    {% include '@LuccaThemeStreamDashboardUiKit/Flash/flashes.html.twig' %}

    {#-- Panel - browser --#}
    <div class="col-12 mt-3">
        <div class="card card-default">
            <div class="card-header">
                <div class="card-title">
                    <b>{{ 'title.results'|trans }}</b>
                </div>
            </div>

            <div class="card-wrapper collapse show">
                <div class="card-body">
                    <div class="col-12">
                        {% block lucca_results_list %}
                        {% endblock lucca_results_list %}
                    </div>
                </div>
            </div>
        </div>
    </div>
    {#-- End Panel - browser --#}

{% endblock lucca_page %}


{% block lucca_css %}
    {{ parent() }}

    {#-- Plugin - DataTables --#}
    {% include "@LuccaThemeStreamDashboardUiKit/Plugins/datatables.css.html.twig" %}

{% endblock lucca_css %}

{% block lucca_modal %}
    {{ parent() }}
{% endblock lucca_modal %}

{% block lucca_js %}
    {{ parent() }}

    {#-- Plugin - DataTables --#}
    {% include "@LuccaThemeStreamDashboardUiKit/Plugins/datatables.js.html.twig" with { 'params' :
        { 'id_datatable': '.dataTables', 'pageLength': 10 }
    } %}

{% endblock lucca_js %}
