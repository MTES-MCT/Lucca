<!DOCTYPE html>
{% trans_default_domain 'ThemeStreamDashboardUiKit' %}

<html lang="{{ app.request.locale }}">
<!-- Head -->
<head>
        {#-- Title --#}
        {% block lucca_title %}
            <title> {{ 'setting.general.app.name'| setting }} | </title>
        {% endblock lucca_title %}

    <!-- Meta -->
    {#    #}{#-- Meta --#}
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta http-equiv="x-ua-compatible" content="ie=edge">

    {#-- Favicon --#}
    {% block lucca_favicon %}
        <link rel="icon" type="image/png" href="{{ asset('favicon.ico') }}"/>
    {% endblock lucca_favicon %}

    <!--  Social tags -->
    {% block lucca_meta %}
        <meta name="description" content="{{ 'meta.description'|trans }}">
        <meta name="keywords" content="{{ 'meta.keywords'|trans }}">
    {% endblock lucca_meta %}

{#    <!-- Web Fonts --> TODO: Check if need change font#}
{#    <link href="//fonts.googleapis.com/css?family=Open+Sans:300,400,600,700" rel="stylesheet">#}
    {% block lucca_css %}
        <!-- Components Vendor Styles -->
        <link rel="stylesheet" href="{{ asset('bundles/luccathemestreamdashboarduikit/vendor/font-awesome/css/all.min.css') }}">

        <!-- Theme Styles -->
        <link rel="stylesheet" href="{{ asset('bundles/luccathemestreamdashboarduikit/css/theme.css') }}">
    {% endblock %}
</head>
<!-- End Head -->

<body>
<main class="container-fluid w-100" role="main">
    <div class="row">
        <div class="col-lg-6 d-flex flex-column justify-content-center align-items-center bg-white mnh-100vh">
                    {% block lucca_login %}

                    {% endblock lucca_login %}
        </div>

        <div class="col-lg-6 d-none d-lg-flex flex-column align-items-center justify-content-center bg-light">
            <img class="img-fluid position-relative u-z-index-3 mx-5" src="{{ asset('bundles/luccathemestreamdashboarduikit/svg/mockups/mockup.svg') }}" alt="Image description">

            <figure class="u-shape u-shape--top-right u-shape--position-5">
                <img src="{{ asset('bundles/luccathemestreamdashboarduikit/svg/shapes/shape-1.svg') }}" alt="Image description">
            </figure>
            <figure class="u-shape u-shape--center-left u-shape--position-6">
                <img src="{{ asset('bundles/luccathemestreamdashboarduikit/svg/shapes/shape-2.svg') }}" alt="Image description">
            </figure>
            <figure class="u-shape u-shape--center-right u-shape--position-7">
                <img src="{{ asset('bundles/luccathemestreamdashboarduikit/svg/shapes/shape-3.svg') }}" alt="Image description">
            </figure>
            <figure class="u-shape u-shape--bottom-left u-shape--position-8">
                <img src="{{ asset('bundles/luccathemestreamdashboarduikit/svg/shapes/shape-4.svg') }}" alt="Image description">
            </figure>
        </div>
    </div>
</main>

{% block lucca_js %}
    {#-- Mainly scripts  --#}
    <script src="{{ asset('bundles/luccathemestreamdashboarduikit/vendor/modernizr/modernizr.custom.js') }}"></script>
{% endblock lucca_js %}
</body>
</html>



