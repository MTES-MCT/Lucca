{#-- Translation domain --#}
{% trans_default_domain 'MinuteBundle' %}

{#--
 # Macros
 # displayState - create div with specific class to display the minute status
  --#}

{% macro displayState(minuteStory) %}

    {% set status = minuteStory.status %}
    {% if minuteStory.status is constant('STATUS_OPEN', minuteStory) %}
        <div class="row">
            <div class="col-3"></div>
            <div class="col-2 text-center"></div>
            <div class="col-2 text-center">
                <div class="alert alert-info"> {{ minuteStory.status|trans }} </div>
            </div>
            <div class="col-2 text-center">
                <div class="alert alert-light"> {{ constant('STATUS_CONTROL', minuteStory)|trans }} </div>
            </div>
            <div class="col-3"></div>
        </div>
    {% elseif minuteStory.status is constant('STATUS_CONTROL', minuteStory) %}
        <div class="row">
            <div class="col-3"></div>
            <div class="col-2 text-center">
                <div class="alert alert-light"> {{ constant('STATUS_OPEN', minuteStory)|trans }} </div>
            </div>
            <div class="col-2 text-center">
                <div class="alert alert-warning"> {{ minuteStory.status|trans }} </div>
            </div>
            <div class="col-2 text-center">
                <div class="alert alert-light"> {{ constant('STATUS_FOLDER', minuteStory)|trans }} </div>
            </div>
            <div class="col-3"></div>
        </div>
    {% elseif minuteStory.status is constant('STATUS_FOLDER', minuteStory) %}
        <div class="row">
            <div class="col-3"></div>
            <div class="col-2 text-center">
                <div class="alert alert-light"> {{ constant('STATUS_CONTROL', minuteStory)|trans }} </div>
            </div>
            <div class="col-2 text-center">
                <div class="alert alert-warning"> {{ minuteStory.status|trans }} </div>
            </div>
            <div class="col-2 text-center">
                <div class="alert alert-light"> {{ constant('STATUS_COURIER', minuteStory)|trans }} </div>
            </div>
            <div class="col-3"></div>
        </div>
    {% elseif minuteStory.status is constant('STATUS_COURIER', minuteStory) %}
        <div class="row">
            <div class="col-3"></div>
            <div class="col-2 text-center">
                <div class="alert alert-light"> {{ constant('STATUS_FOLDER', minuteStory)|trans }} </div>
            </div>
            <div class="col-2 text-center">
                <div class="alert alert-warning"> {{ minuteStory.status|trans }} </div>
            </div>
            <div class="col-2 text-center">
                <div class="alert alert-light"> {{ constant('STATUS_AIT', minuteStory)|trans }} </div>
            </div>
            <div class="col-3"></div>
        </div>
    {% elseif minuteStory.status is constant('STATUS_AIT', minuteStory) %}
        <div class="row">
            <div class="col-3"></div>
            <div class="col-2 text-center">
                <div class="alert alert-light"> {{ constant('STATUS_COURIER', minuteStory)|trans }} </div>
            </div>
            <div class="col-2 text-center">
                <div class="alert alert-dark"> {{ minuteStory.status|trans }} </div>
            </div>
            <div class="col-2 text-center">
                <div class="alert alert-light"> {{ constant('STATUS_UPDATING', minuteStory)|trans }} </div>
            </div>
            <div class="col-3"></div>
        </div>
    {% elseif minuteStory.status is constant('STATUS_UPDATING', minuteStory) %}
        <div class="row">
            <div class="col-3"></div>
            <div class="col-2 text-center">
                <div class="alert alert-light"> {{ constant('STATUS_AIT', minuteStory)|trans }} </div>
            </div>
            <div class="col-2 text-center">
                <div class="alert alert-warning"> {{ minuteStory.status|trans }} </div>
            </div>
            <div class="col-2 text-center">
                <div class="alert alert-light"> {{ constant('STATUS_DECISION', minuteStory)|trans }} </div>
            </div>
            <div class="col-3"></div>
        </div>
    {% elseif minuteStory.status is constant('STATUS_DECISION', minuteStory) %}
        <div class="row">
            <div class="col-3"></div>
            <div class="col-2 text-center">
                <div class="alert alert-light"> {{ constant('STATUS_UPDATING', minuteStory)|trans }} </div>
            </div>
            <div class="col-2 text-center">
                <div class="alert alert-danger"> {{ minuteStory.status|trans }} </div>
            </div>
            <div class="col-2 text-center">
                <div class="alert alert-light"> {{ constant('STATUS_CLOSURE', minuteStory)|trans }} </div>
            </div>
            <div class="col-3"></div>
        </div>
    {% elseif minuteStory.status is constant('STATUS_CLOSURE', minuteStory) %}
        <div class="row">
            <div class="col-3"></div>
            <div class="col-2 text-center">
                <div class="alert alert-light"> {{ constant('STATUS_DECISION', minuteStory)|trans }} </div>
            </div>
            <div class="col-2 text-center">
                <div class="alert alert-success"> {{ minuteStory.status|trans }} </div>
            </div>
            <div class="col-2 text-center"></div>
            <div class="col-3"></div>
        </div>
    {% endif %}

{% endmacro %}
