{% trans_default_domain 'LuccaMinuteBundle' %}

{% block collection_widget %}
    {% spaceless %}
        {% if prototype is defined %}
            {% set attr = attr|merge({'data-prototype': form_widget(prototype)}) %}
            {% set attr = attr|merge({'data-prototype-name': prototype.vars.name}) %}
        {% endif %}
        {% set attr = attr|merge({'data-allow-add': allow_add ? 1 : 0}) %}
        {% set attr = attr|merge({'data-allow-remove': allow_delete ? 1 : 0 }) %}
        {% set attr = attr|merge({'data-name-prefix': full_name}) %}

        {{ form_errors(form) }}

        <table {{ block('widget_attributes') }}>
            <thead>
            <tr>
                <th>{{ 'label.dateFolder6'|trans }}</th>
                <th>{{ 'label.preparedBy'|trans }}</th>
                <th>{{ 'label.nature'|trans }}</th>
                <th></th>
            </tr>
            </thead>
            <tbody>

            {% for item in form %}
                {{ form_widget(item) }}
            {% endfor %}

            </tbody>
        </table>
    {% endspaceless %}

{% endblock %}

{% block lucca_minutebundle_penalty_widget %}

    <tr {{ block('widget_attributes') }}>
        <td>{{ form_widget(form.dateFolder) }}</td>
        <td>{{ form_widget(form.preparedBy) }}</td>
        <td>{{ form_widget(form.nature) }}</td>

        <td class="text-center">
            <a href="#" class="collection-duplicate btn btn-info" title="{{ 'link.penalty.duplicate'|trans }}">
                <span class="fa fa-th-large"></span></a>
            <a href="#" class="collection-remove btn btn-danger" title="{{ 'link.penalty.delete'|trans }}">
                <span class="fa fa-trash"></span></a>
        </td>
    </tr>

{% endblock %}

{% block lucca_minutebundle_penalty_label %}{% endblock %}