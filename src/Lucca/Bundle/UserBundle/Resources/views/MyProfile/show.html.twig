{% extends "@LuccaThemeStreamDashboardUiKit/Layout/layout.html.twig" %}
{% trans_default_domain 'LuccaUserBundle' %}

{% set param_entity='entity.user'|transchoice(1) %}
{% set param_entities='entity.user'|transchoice(2) %}

{% block menuActive_profile %}class="active"{% endblock menuActive_profile %}


{% block lucca_page %}

    {#-- Panel - main --#}
    <div class="col-lg-6 col-md-8 col-sm-12 col-xs-12">

        <div class="card card-default">
            <div class="card-header"><b>{{ app.user.name }}</b></div>

            <div class="card-wrapper">
                <div class="card-body">
                    <div class="col-12">

                        <table class="table table-striped table-hover">
                            <tbody>
                            <tr>
                                <th><i class="fa fa-user"></i> {{ 'label.username'|trans }}</th>
                                <td>{{ user.username }}</td>
                            </tr>
                            <tr>
                                <th><i class="fa fa-envelope"></i> {{ 'label.email'|trans }}</th>
                                <td>{{ user.email }}</td>
                            </tr>
                            <tr>
                                <th><i class="fa fa-shield"></i> {{ 'label.roles'|trans }}</th>
                                <td>
                                    {% for group in user.groups %}
                                        {{ group.name }}
                                        {% if not loop.last %}<br>{% endif %}
                                    {% endfor %}
                                </td>
                            </tr>
                            <tr>
                                <th>{{ 'label.name'|trans }}</th>
                                <td>{{ user.name }}</td>
                            </tr>
                            <tr>
                                <th>{{ 'label.lastLogin'|trans }}</th>
                                <td>{{ user.lastLogin|date('d/m/Y H:i:s') }}</td>
                            </tr>
                            <tr>
                                <th>{{ 'label.enabled'|trans }}</th>
                                <td>{% if user.enabled %}<i class="fa fa-check"></i>{% else %}<i
                                        class="fas fa-times"></i>{% endif %} </td>
                            </tr>

                            </tbody>
                        </table>

                        <a class="btn btn-secondary btn-lg" href="{{ path('lucca_core_dashboard') }}"
                           title="{{ 'link.back'|trans }}"><i class="fa fa-reply"></i></a>

                        {# TODO Update profile user with adherent view #}
                        {#<a class="btn btn-info btn-lg"#}
                        {#href="{{ path('lucca_user_profile_edit') }}"#}
                        {#title="{{ 'link.edit'|trans }}"><i class="fas fa-pencil-alt"></i></a>#}

                        <a class="btn btn-warning btn-lg pull-right"
                           href="{{ path('lucca_user_myProfile_changePassword') }}"
                           title="{{ 'link.changePassword'|trans }}"><i class="fa fa-key"></i></a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    {#-- End Panel - main --#}

{% endblock lucca_page %}

