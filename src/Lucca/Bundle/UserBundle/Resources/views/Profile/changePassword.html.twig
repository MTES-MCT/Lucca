{% extends "@LuccaThemeStreamDashboardUiKit/Layout/layout.html.twig" %}
{% trans_default_domain 'UserBundle' %}

{% set entity_trans='entity.user'|trans %}


{% block menuActive_profile %}active{% endblock menuActive_profile %}

{% block lucca_page %}

    {#-- Panel - main --#}
    {{ form_start(form) }}
    {{ form_errors(form) }}

    <div class="col-lg-6 col-md-8 col-sm-12 col-xs-12">

        <div class="card card-default">
            <div class="card-header"><b>{{ app.user.name }}</b></div>

            <div class="card-wrapper">
                <div class="card-body">
                    <div class="col-12">
                        {{ form_widget(form) }}

                        <a class="btn btn-secondary btn-lg" href="{{ path('lucca_adherent_profile_show') }}"
                           title="{{ 'link.back'|trans }}"><i class="fa fa-reply"></i></a>

                        <button type="submit" class="btn btn-primary btn-lg" id="btn-submit"
                                title="{{ 'link.changePassword'|trans }}"><i class="fas fa-check"></i></button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    {{ form_rest(form) }}
    {{ form_end(form) }}
    {#-- End Panel - main --#}

{% endblock lucca_page %}
