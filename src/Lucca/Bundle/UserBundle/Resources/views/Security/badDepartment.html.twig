{% extends "@LuccaThemeStreamDashboardUiKit/Page/angleLogin.html.twig" %}
{% trans_default_domain 'UserBundle' %}


{# Title #}
{% block lucca_title %}
    <title> {{ 'setting.general.app.name'| setting }} | {{ 'meta.login'|trans }}</title>
{% endblock lucca_title %}


{% block lucca_login %}

    <div class="u-login-form">
        <form class="mb-3" id="loginForm" role="form" method="post">
            <div class="card-card-header text-center mb-3">
                <a href="{{ path('lucca_content_dashboard') }}">
                    <img src="{{ asset('/assets/logo/lucca-logo-transparent.png') }}" alt="Image"
                         class="img-responsive block-center img-rounded mh50"
                         style="max-width: 50px; max-height: 50px;">
                </a>
            </div>
            <h1 class="h2 text-center">{{ 'setting.general.app.name'| setting }}</h1>
            <p class="btn btn-danger  text-center">{{ 'label.badDepartement'|trans|raw }}</p>

        </form>

        <p class="small">
            &copy; 2017 - {{ 'now'|date('Y') }} {{ 'label.legalMention'|trans }}
        </p>
    </div>
{% endblock lucca_login %}
