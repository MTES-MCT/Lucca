<script>
    $(document).ready(function () {
        $('#logsTable').DataTable({
            language: {
                url: "{{ asset('bundles/nwthemecolor/plugins/datatables.net-i18n/dataTables.' ~ app.request.locale ~ '.json') }}"
            },
            processing: true,
            serverSide: true,
            ajax: {
                url: "{{ path('lucca_log_api_list_datatable') }}",
                type: 'GET',
                dataType: "JSON",
                data: function (d) {
                    d.status = $('#lucca_logBundle_browser_status').val();
                }
            },
            columns: [
                {data: 'username', name: 'username'},
                {data: 'status', name: 'status', searchable: true},
                {data: 'shortMessage', name: 'shortMessage'},
                {data: 'classname', name: 'classname'},
                {data: 'objectId', name: 'objectId'},
                {data: 'createdAt', name: 'createdAt', render: (data) => {
                    const formatter = new Intl.DateTimeFormat('{{ app.locale }}', { dateStyle: 'short', timeStyle: 'medium'});
                    const date = new Date(data.createdAt);

                    return formatter.format(date);
                }},
                {
                    data: 'id',
                    name: 'id',
                    orderable: false,
                    searchable: false,
                    render: function (data, type, row) {
                        return '<a href="{{ path('lucca_log_show', { 'id': 0 } ) }}'.replace('0', row.id) + '" title="{{ 'link.log.show'|trans({}, 'LogBundle') }}" class="btn btn-info btn-sm"><i class="fas fa-eye"></i></a>';
                    },
                    width: '10%',
                },
            ],
            overflow: 'hidden',
            pageLength: 10,
            lengthMenu: [10, 25, 50, 75, 100],
            order: [[3, 'desc']],
        });
        // $('#nw_logBundle_browser_dateStart, #nw_logBundle_browser_dateEnd').on('change', function () {
        //     $('#logsTable').DataTable().ajax.reload();
        // });
    });
</script>
