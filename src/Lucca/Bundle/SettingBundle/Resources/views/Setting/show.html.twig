{% extends '@LuccaThemeStreamDashboardUiKit/SubLayout/show.html.twig' %}
{% trans_default_domain 'LuccaSettingBundle' %}

{% set param_entity='entity.setting'|transchoice(1) %}
{% set param_entities='entity.setting'|transchoice(2) %}

{% block lucca_title_name %}
    <h2>{{ param_entity }} - <b>{{ (setting.name)|trans }}</b></h2>
{% endblock lucca_title_name %}

{% block lucca_panels %}

    {% embed "@LuccaSetting/Setting/Embed/panel-setting.html.twig" with { 'setting': setting, 'isShow': true } %}

        {% block lucca_embed_buttons_setting %}
            {#-- Translation domain embed --#}
            {% trans_default_domain 'LuccaSettingBundle' %}
            <div class="col-12 mt-4">
                <a class="btn btn-secondary btn-lg" href="{{ path('lucca_setting_index') }}"
                   title="{{ 'link.setting.backList'|trans }}"><i class="fa fa-reply"></i></a>
                <a href="{{ path('lucca_setting_edit', { 'id': setting.id }) }}"
                   class="btn btn-warning btn-lg"
                   title="{{ 'link.setting.edit'|trans }}">
                    <i class="fas fa-pencil-alt"></i>
                </a>
            </div>
        {% endblock %}
    {% endembed %}
    {#-- End Panel - main --#}


{% endblock lucca_panels %}
